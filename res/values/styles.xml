<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="ShelbyActionBar" parent="android:style/Widget.Holo.ActionBar">
		<item name="android:background">@drawable/background_action_bar</item>
	</style>
	
	<style name="Theme.ShelbyTheme" parent="android:style/Theme.Holo">
		<item name="android:actionBarStyle">@style/ShelbyActionBar</item>
	</style>
	
	
	<style name="Font">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#FFF</item>
	</style>
	<style name="Font.Shadowed" parent="@style/Font">
		<item name="android:layout_margin">5dp</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>		
	</style>
</resources>