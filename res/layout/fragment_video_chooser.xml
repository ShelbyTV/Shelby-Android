<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  	  <LinearLayout
  	  	android:layout_height="wrap_content"
  	  	android:layout_width="fill_parent" 
  	  	android:orientation="horizontal"  	 
  	  	android:background="@drawable/background_bevel_gray" 
  	  	android:id="@+id/line_controls"
  	  >
  	      <ImageView
  	      	android:layout_width="wrap_content"
  	      	android:layout_height="wrap_content" 
  	      	android:id="@+id/full_list"   
  	      	android:src="@drawable/clickable_list_button"
  	      />
  	      <TextView
  	      	android:layout_height="fill_parent"
  	      	android:layout_width="1dp"
  	      	android:background="#000"    
  	      />
  	      <ImageView
  	      	android:layout_width="wrap_content"
  	      	android:layout_height="wrap_content"  
  	      	android:id="@+id/favorite_list"
  	      	android:src="@drawable/clickable_favorite_button"
  	      />
  	      <TextView
  	      	android:layout_height="fill_parent"
  	      	android:layout_width="1dp"
  	      	android:background="#000"    
  	      />  	      
  	      <ImageView 
  	      	android:layout_width="wrap_content"
  	      	android:layout_height="wrap_content"  
  	      	android:id="@+id/bookmark_list"  
  	      	android:src="@drawable/clickable_favorite_button"
  	      />  	  
  	      <TextView
  	      	android:layout_height="fill_parent"
  	      	android:layout_width="1dp"
  	      	android:background="#000"    
  	      />  	            	      
  	  </LinearLayout>
      <com.shelby.ui.components.BounceListView 
  		  android:layout_width="wrap_content"
  		  android:layout_height="fill_parent"
          android:id="@+id/video_listview"
          android:cacheColorHint="#222222"
          android:layout_below="@+id/line_controls"
          />
</RelativeLayout>