<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_background_bevel_gray"
    android:padding="25dp"
    >
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="150dp"
		android:scaleType="fitStart"
		android:id="@+id/video_thumb"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
	/>    
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/marker"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:src="@drawable/marker_facebook_new"
	/>       	
	<TextView
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/video_thumb"
		android:id="@+id/video_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxLines="2"
		android:textColor="#FFF"
		android:textSize="15sp"
		android:visibility="gone"
	/>
	<TextView 
		android:singleLine="true"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:background="#66666666"
		android:id="@+id/description"
		android:textColor="#f1f1f1"   
		android:textSize="18sp"
		android:padding="5dp" 
		android:layout_alignBottom="@+id/video_thumb"
	/>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@+id/video_thumb"
		android:background="#000"
		android:orientation="horizontal"
		android:weightSum="8"
	>
		<ImageView
			android:layout_height="30dp"
			android:layout_width="30dp"
			android:id="@+id/sharer_photo"
		/>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:id="@+id/sharer_name"
			android:layout_toRightOf="@+id/sharer_photo"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:padding="2dp"
			android:layout_centerVertical="true"
			android:singleLine="true"
			android:textSize="16sp"
			android:layout_weight="3"
		/>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:id="@+id/sharer_shared_since"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:padding="2dp"
			android:singleLine="true"
			android:textColor="#f1f1f1"
			android:layout_alignParentRight="true"
			android:textSize="13sp"
			android:layout_weight="5"
			android:layout_marginTop="3dp"
		/>		
	</LinearLayout>
</RelativeLayout>
